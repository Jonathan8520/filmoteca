<html lang="fr">

	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>
			{% block title %}{% endblock %}
		</title>

		{# <link rel="stylesheet" href="/style/base.css"> #}
		{% block stylesheet %}{% endblock %}
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css">
	</head>

	<body style="min-width: 320px;">

		{% include ('fragments/navbar.html.twig') %}

		<main style="margin-top: 100px;">
			{% if app.session.flash %}
				<div class="alert alert-{{ app.session.flash.type }} alert-dismissible fade show w-50 mx-auto text-center mt-4" role="alert">
					{{ app.session.flash.message }}
					<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
				</div>
			{% endif %}

			{% block body %}{% endblock %}
		</main>

		{% include ('fragments/footer.html.twig') %}

		 <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

	</body>

</html>
