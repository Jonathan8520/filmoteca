{% extends 'index.html.twig' %}

{% block title %}
	Ajouter un Film
{% endblock %}

{% block body %}
	<div class="container py-5">
		<h3 class="text-center text-primary mb-4">Ajouter un nouveau film</h3>
		<form action="/films/create" method="post" class="row g-3 shadow p-4 rounded border">
			<div class="col-md-6">
				<label for="title" class="form-label">Titre</label>
				<input type="text" id="title" name="title" class="form-control" required>
			</div>
			<div class="col-md-6">
				<label for="year" class="form-label">Année</label>
				<input type="number" id="year" name="year" class="form-control" min="1900" max="2100" required>
			</div>
			<div class="col-12">
				<label for="synopsis" class="form-label">Synopsis</label>
				<textarea id="synopsis" name="synopsis" class="form-control" rows="3" required></textarea>
			</div>
			<div class="col-md-6">
				<label for="director" class="form-label">Réalisateur</label>
				<input type="text" id="director" name="director" class="form-control" required>
			</div>
			<div class="col-md-6">
				<label for="type" class="form-label">Genre</label>
				<input type="text" id="type" name="type" class="form-control" required>
			</div>
			<div class="col-12 text-center">
				<button type="submit" class="btn btn-success btn-lg">
					<i class="bi bi-check-circle"></i>
					Enregistrer
				</button>
			</div>
		</form>
	</div>
{% endblock %}